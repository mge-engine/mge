#ifdef _MSC_VER
#  define MGE_COMPILER_MSVC 1
#endif

#if defined(__GNUC__)
#  define MGE_COMPILER_GNUC 1
#endif

#ifdef __MINGW32__
#  define MGE_COMPILER_MINGW
#endif

#ifdef __clang__
#  define MGE_COMPILER_CLANG
#endif

#ifdef __linux__
#  define MGE_OS_LINUX 1
#endif

#if defined(__WIN32__) || defined(_WIN32)
#  define MGE_OS_WINDOWS 1
#endif

#ifdef __APPLE__
#  define MGE_OS_MACOSX
#endif

#if defined(MGE_OS_LINUX) || defined(MGE_OS_MACOSX)
