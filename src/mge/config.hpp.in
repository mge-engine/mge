#endif

#ifdef MGE_OS_LINUX
namespace linux {}
namespace platform = linux;
#elif defined MGE_OS_MACOSX
namespace macos {}
namespace platform = macos;
#elif defined MGE_OS_WINDOWS
namespace win32 {}
namespace platform = win32;
#else
#error Missing port.
#endif

#if defined(MGE_COMPILER_GNUC) || defined(MGE_COMPILER_CLANG)
