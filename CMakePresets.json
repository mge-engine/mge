{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "binaryDir": "${sourceDir}/build",
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "default-glfw",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build.glfw",
            "cacheVariables": {
                "USE_GLFW": "ON"
            }
        },
        {
            "name": "ci-build",
            "inherits": "default",
            "cacheVariables": {
                "HEADLESS_ENVIRONMENT": "ON"
            }
        }
    ]
}