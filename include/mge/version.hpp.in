#pragma once

/**
 * @file mge/version.hpp
 * @brief Version definitions
 */

/**
 * @brief MGE major version.
 */
#define MGE_VERSION_MAJOR @MGE_VERSION_MAJOR @

/**
 * @brief MGE minor version
 */
#define MGE_VERSION_MINOR @MGE_VERSION_MINOR @

/**
 * @brief MGE patch level.
 */
#define MGE_PATCHLEVEL @MGE_PATCHLEVEL @

/**
 * @brief Build number.
 */
#define MGE_BUILD_NUMBER "@MGE_BUILD_NUMBER@"

/**
 * @brief Complete MGE version, in the form
 * "<major>.<minor>.<patchlevel>-<build-number>".
 */
#define MGE_VERSION_STRING                                                     \
    "@MGE_VERSION_MAJOR@.@MGE_VERSION_MINOR@.@MGE_PATCHLEVEL@"                 \
    "-@MGE_BUILD_NUMBER@"
